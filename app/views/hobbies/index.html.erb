<% if user_signed_in? %>
<h1>Your hobbies</h1>
<div class="panel panel-default">
  <div class="panel-heading">Hours completed in your hobby</div>
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>test slot</th>
      <th>Name</th>
      <th>Description</th>
      <th>Sunday</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Created</th>
      <th>Weekly Hours</th>
      <th>Twilio reminder</th>
    </tr>
    </thead>
    <tbody>
    <% current_user.hobbies.each do |hobby| %>
      <tr>
        <td><%= hobby.hours %></td>
        <td><%= hobby.name %></td>
        <td><%= hobby.description %></td>
        <td><%= hobby.sunday %></td>
        <td><%= hobby.monday %></td>
        <td><%= hobby.tuesday %></td>
        <td><%= hobby.wednesday %></td>
        <td><%= hobby.thursday %></td>
        <td><%= hobby.friday %></td>
        <td><%= hobby.saturday %></td>
        <td><%= hobby.created_at %></td>
        <td><%= hobby.sunday + hobby.monday + hobby.tuesday + hobby.wednesday + hobby.thursday + hobby.friday + hobby.saturday %></td>
        <% if hobby.user == current_user %>
        <td><input type="checkbox" checked></input></td>
        <td><%= link_to "Show", hobby, class: "btn btn-success" %></td>
        <td><%= link_to "Edit", edit_hobby_path(hobby), class: "btn btn-warning" %></td>
        <td><%= link_to "Delete", hobby, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <td><%= link_to "add hours", add_hobby_path(hobby), class: "btn btn-info" %></td>
        <td><%= link_to "subtract hours", subtract_hobby_path(hobby), class: "btn btn-info" %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to "New Hobby", new_hobby_path, class: "btn btn-success" %>
<% else %>
  <h1>Please Sign in or Sign up</h1>
  <p>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success btn-lg" %>
  </p>
<% end %>
